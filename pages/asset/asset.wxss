
label {
    display: flex;
    align-items: center;
    margin-top: 30rpx;
    font-size: 30rpx;
    color: #333;
}
.wux-button {
  position: relative;
  box-sizing: border-box;
  margin-top: 20rpx;
  padding: 0 24rpx;
  min-width: 104rpx;
  min-height: 88rpx;
  border: 2rpx solid transparent;
  border-radius: 8rpx;
  vertical-align: middle;
  text-align: center;
  text-overflow: ellipsis;
  font-size: 32rpx;
  line-height: 84rpx;
  cursor: pointer;
  border-color: #444;
  background-color: transparent;
  color: #444;
}

.wux-button:after {
  content: " ";
  width: 100%;
  height: 100%;
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  bottom: -12rpx;
  left: -12rpx;
  border: none;
  transform: none;
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 0;
}

.want-exchange {
    padding: 30rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-bottom: 20rpx solid #eee;
}
.title {
    margin-bottom: 30rpx;
    font-size: 32rpx;
    color: #333;
}
.wrap-line {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.picker-wrap {
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #333;
}

.picker-wrap .picker {
    display: flex;
    align-items: center;
    position: relative;
    width: 200rpx;
    height: 48rpx;
    text-align: center;
    line-height: 48rpx;
    border: 1rpx solid #ccc;
    border-radius: 4rpx;
}

picker .text {
    flex: 1;
    text-align: center;
    border-right: 1rpx solid #ccc;
}

picker .icon {
    width: 32rpx;
    height: 32rpx;
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-size: 100%;
}

.checkbox {
    width: 36rpx;
    height: 36rpx;
    margin-right: 16rpx;
    border-radius: 50%;
    background-color: #fff;
    border: 1rpx solid #ccc;
    box-sizing: border-box;
}

.checkbox[checked] {
    width: 36rpx;
    height: 36rpx;
    background-size: 100%;
    border: none;
    background-repeat: no-repeat;
    background-image: url(data:image/svg+xml;base64,);
}

.wx-checkbox-input {
    display: none;
}

.to-exchange {
    padding: 30rpx 0 100rpx 30rpx;
    box-sizing: border-box;
}
.content { 
    padding-top: 60rpx; 
} 
 
.nav { 
    display: flex; 
    padding: 0 50rpx 0; 
} 
 
.nav view { 
    width: 120rpx; 
    height: 60rpx; 
    background-color: #fff; 
    color: #313045; 
    font-size: 32rpx; 
    text-align: center; 
    line-height: 60rpx; 
    margin-right: 20rpx; 
    border-left: 1rpx solid #313045; 
    border-right: 1rpx solid #313045; 
} 
 
.nav .on { 
    background-color: rgba(92, 95, 99, 0.774); 
    color: #000; 
} 
 
.shikigami { 
    width: 690rpx; 
    background-color: rgba(255,255,255,.2); 
    padding: 30rpx 30rpx 0; 
    box-sizing: border-box; 
    border-radius: 10rpx; 
} 
 
.list { 
    display: flex; 
    flex-wrap: wrap; 
    margin-left: -30rpx; 
} 
 
.shikigami .item { 
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    margin-left: 30rpx; 
    margin-bottom: 30rpx; 
    color: #000; 
    font-size: 26rpx; 
} 
 
.shikigami image { 
    width: 135rpx; 
    height: 135rpx; 
    margin-bottom: 10rpx; 
    border: 1rpx solid #313045; 
    box-sizing: border-box; 
}